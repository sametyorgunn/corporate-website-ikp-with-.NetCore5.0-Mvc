@using EntityLayer.Concrete
@model AnaSayfaKisim3
@{
    ViewData["Title"] = "Müşterilerimiz Düzenle";
    Layout = "~/Views/Shared/Layout/General/AdminLayout.cshtml";
}

<div class="inner-wrapper">
    <!-- start: sidebar -->
    <!-- end: sidebar -->
    <section role="main" class="content-body content-body-modern mt-0">
        <header class="page-header page-header-left-inline-breadcrumb">
        
            <div class="right-wrapper">
                <ol class="breadcrumbs">
                    <li><span>Home</span></li>

                    <li><span>Müşterilerimiz</span></li>
                </ol>
                <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fas fa-chevron-left"></i></a>
            </div>
        </header>

        <!-- start: page -->
        <form class="ecommerce-form action-buttons-fixed" action="#" method="post" enctype="multipart/form-data">

            <div class="row">
                <div class="col">
                    <section class="card card-modern card-big-info">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-12-9 col-xl-13-7">

                                    <div class="row">
                                        <div class="col-sm-7 mb-4">
                                            <div class="card">
                                                <div class="card-body">
                                                    <div hidden class="form-group row align-items-center mb-3">
                                                        <label class="col-lg-4 col-xl-2 control-label text-lg-end mb-0">id</label>
                                                        <div class="col-lg-11 col-xl-10">
                                                            <textarea id="editor1" type="text" class="form-control form-control-modern" name="AnaSayfaKisim3Id" required></textarea>
                                                        </div>
                                                    </div>
                                                     <div class="form-group row align-items-center mb-3">
                                                        <label class="col-lg-4 col-xl-2 control-label text-lg-end mb-0">Dil</label>
                                                        <div class="col-lg-11 col-xl-10">
                                                             @Html.DropDownListFor(x => x.DilTablosuId,(List<SelectListItem>)ViewBag.dil, new { @class = "form-control", id="SinifSelectBox"} )
                                                        </div>

                                                    </div>
                                                     
                                                    <div class="form-group row align-items-center mb-3">
                                                        <label class="col-lg-4 col-xl-2 control-label text-lg-end mb-0">Başlık</label>
                                                        <div class="col-lg-11 col-xl-10">
                                                            <textarea id="editor2" type="text" class="form-control form-control-modern" name="AnaSayfaBaslik3" rows="2"></textarea>
                                                        </div>

                                                    </div>
                                                    <div class="form-group row align-items-center mb-3">
                                                        <label class="col-lg-4 col-xl-2 control-label text-lg-end mb-0">Küçük Başlık</label>
                                                        <div class="col-lg-11 col-xl-10">
                                                            <textarea id="editor3" type="text" class="form-control form-control-modern" name="AnaSayfaKucukBaslik3_1" rows="2"></textarea>
                                                        </div>

                                                    </div>
                                                    <div class="form-group row align-items-center mb-3">
                                                        <label class="col-lg-4 col-xl-2 control-label text-lg-end mb-0">Küçük Başlık 2</label>
                                                        <div class="col-lg-11 col-xl-10">
                                                            <textarea id="editor4" type="text" class="form-control form-control-modern" name="AnaSayfaKucukBaslik3_1_1" rows="2"></textarea>
                                                        </div>

                                                    </div>
                                                    <div class="form-group row align-items-center mb-3">
                                                        <label class="col-lg-4 col-xl-2 control-label text-lg-end pt-2 mt-1 mb-0">Açıklama</label>
                                                        <div class="col-lg-11 col-xl-10">
                                                            <textarea id="editor5" type="text" class="form-control form-control-modern" name="AnaSayfaDescription3_1" rows="4"></textarea>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-5">
                                            <div class="card">
                                                <div class="card-body">
                                                    <img class="card-img-top" src="~/Resimler/AnaSayfaEkleResim/3.kısım.jpeg" alt="Card image cap">
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
            <div class="row action-buttons">
                <div class="col-12 col-md-auto">
                    <button type="submit" class="submit-button btn btn-primary btn-px-4 py-3 d-flex align-items-center font-weight-semibold line-height-1" data-loading-text="Loading...">
                        <i class="bx bx-save text-4 me-2"></i> Kaydet
                    </button>
                </div>

            </div>
            <script>
                CKEDITOR.replace('editor1');
                CKEDITOR.replace('editor2');
                CKEDITOR.replace('editor3');
                CKEDITOR.replace('editor4');
                CKEDITOR.replace('editor5');
                
                CKEDITOR.instances['editor1'].setData("@Model.AnaSayfaKisim3Id");
                CKEDITOR.instances['editor2'].setData("@Html.Raw(@Model.AnaSayfaBaslik3)");
                CKEDITOR.instances['editor3'].setData("@Html.Raw(@Model.AnaSayfaKucukBaslik3_1)");
                CKEDITOR.instances['editor4'].setData("@Html.Raw(@Model.AnaSayfaKucukBaslik3_1_1)");
                CKEDITOR.instances['editor5'].setData("@Html.Raw(@Model.AnaSayfaDescription3_1)");
                
                CKEDITOR.config.autoParagraph = false;

            </script>
        </form>
    </section>
</div>