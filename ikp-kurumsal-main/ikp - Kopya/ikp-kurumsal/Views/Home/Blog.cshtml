@using EntityLayer.Concrete
@model List<BlogKategori>
@{
    ViewData["Title"] = "Blog";
    Layout = "~/Views/Shared/Layout/Front/_Layout.cshtml";
}

<div role="main" class="main" style="background-color:#fff">
    <section class="section border-0 m-0 pb-3">

        <div class="container container">

            <div class="row pb-1">
                @foreach (var i in Model)
                {
                    <div class="col-sm-6 col-lg-4 mb-4 pb-2">
                        <a href="/Home/BlogKategoriDetay/@i.ID">

                            <article>
                                <div class="thumb-info thumb-info-no-borders thumb-info-bottom-info thumb-info-bottom-info-dark thumb-info-bottom-info-show-more thumb-info-no-zoom border-radius-0">
                                    <div class="thumb-info-wrapper thumb-info-wrapper-opacity-6">
                                        <img src="~/Resimler/BlogKategori/@i.KategoriResimYol" class="img-fluid" alt="How To Take Better Concert Pictures in 30 Seconds" style="width:500px;height:220px">
                                        <div class="thumb-info-title bg-transparent p-4">
                                            @*<div class="thumb-info-type bg-color-primary px-2 mb-1">Photography</div>*@
                                            <div class="thumb-info-inner mt-1">
                                                <h2 class="text-color-light line-height-2 text-4 font-weight-bold mb-0">@Html.Raw(@i.BlogKategoriAdi)</h2>
                                            </div>
                                            <div class="thumb-info-show-more-content">
                                                <p class="mb-0 text-1 line-height-9 mb-1 mt-2 text-light opacity-5">@Html.Raw(@i.BlogKategoriAciklamasi)</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </article>
                        </a>
                    </div>
                }
            </div>
        </div>
    </section>

    @await Component.InvokeAsync("BlogFiltreleme")

    <div class="container container">
        <div class="row py-5">

            @await Component.InvokeAsync("BlogSayfasiSecilenListele")

            @await Component.InvokeAsync("BlogSayfasiSonBlogs")

            @await Component.InvokeAsync("BlogOneCikanlar")

        </div>
    </div>
</div>